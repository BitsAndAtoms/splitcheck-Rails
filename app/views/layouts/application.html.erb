<!DOCTYPE html>
<html>
  <head>
    <title>SplitTheCheck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   </header class ="main">
     <%= image_tag 'greatEats.jpg', :width => "100%", alt: 'splitTheCheck' %>
   </header>
    
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li class="active"><%= link_to '<span class="glyphicon glyphicon-log-out"></span> Logout'.html_safe, destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to '<span class="glyphicon glyphicon-user"></span> User Summary'.html_safe, current_user %></li>
            <% else %>
              <li> <%= link_to '<span class="glyphicon glyphicon-user"></span> Sign Up'.html_safe, new_user_registration_path %></li>
              <li><%= link_to '<span class="glyphicon glyphicon-log-in"></span> Login'.html_safe, new_user_session_path %></li>
            <% end %>   
         </ul>
       </div>
     </nav>
   

  <%= yield %>

  </body>
</html>
